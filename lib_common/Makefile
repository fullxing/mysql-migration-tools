## Makefile created by Oracle Solaris Studio.

CCC = gcc
CXX = g++
BASICOPTS = -g -fPIC -rdynamic -Wall -m64
BASICLIBOPTS = -shared -fPIC
CCFLAGS = $(BASICOPTS)
CXXFLAGS = $(BASICOPTS)
CCLIBFLAGS = $(BASICLIBOPTS)
CXXLIBFLAGS = $(BASICLIBOPTS)
CXX_H_PATH =
CXX_LIB_PATH =

OBJ_STATIC = ../lib/libcommon.a
OBJ_SHARE = ../lib/libcommon.so

LDLIBS = 

all: ../lib/libcommon.a ../lib/libcommon.so

OBJS = log.o sys_exception.o \
	exception_stack_trace.o \
	ini_file.o \
	directory.o \
	file.o \
	datetime.o \
	
					
%o: %c
	$(CCC) $(CCFLAGS) $(CXX_H_PATH) -c -o  $@ $<

%o: %cpp
	$(CXX) $(CXXFLAGS) $(CXX_H_PATH) -c -o  $@ $<
	
$(OBJ_STATIC): $(OBJS)
	ar rv $@ ${OBJS}

$(OBJ_SHARE): $(OBJS)
	$(CXX)  $(CXXLIBFLAGS) -Wl,-rpath, $(CXX_H_PATH) -o $@ $< $(CXX_LIB_PATH) $(LDLIBS) 

.PHONY:clean 
clean: 
	rm -f *.o ../lib/libcommon.a ../lib/libcommon.so
	

.KEEP_STATE:
.KEEP_STATE_FILE:.make.state.GNU-amd64-Linux

